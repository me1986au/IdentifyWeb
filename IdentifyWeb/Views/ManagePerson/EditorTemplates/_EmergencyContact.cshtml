@model  IdentifyWeb.Models.EmergencyContactViewModel

@{
    Layout = null;


    var newGuid = Guid.NewGuid();
    ViewBag.Guid = newGuid;

    ViewData.TemplateInfo.HtmlFieldPrefix = string.Format("{0}[{1}]", "EmergencyContactViewModels", newGuid);

}

<script type="text/javascript">

    $(document).ready(function () {
        $("a.deleteRow").on("click", function () {
            alert("yolo");
            $(this).closest("div").remove();
            return false;
        });

    });

</script>


<div class="form-group">
    <input type="hidden" name="EmergencyContactViewModels.Index" value=@ViewBag.Guid.ToString() />
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
        @Html.EditorFor(x => x.Name, new {data_val = "true", data_val_required = "The Name field is required.", @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
        @Html.EditorFor(x => x.PhoneNumber, new { data_val = "true", data_val_required = "The PhoneNumber field is required.", @class = "form-control" })
    </div>
    <a href="#" class="deleteRow">Delete</a>
    <br />
    <br />
</div>

